        <ListBox HorizontalAlignment="Left" Height="356" Margin="242,85
                 ,0,0" VerticalAlignment="Top" Width="718" Background="#FFFAFAFA"/>
        <Label Content="                                                     О дисциплине" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="242,51,42,0"
            Foreground="Gray" FontSize="20" Height="34" RenderTransformOrigin="0.371,2.345" Width="718" />
